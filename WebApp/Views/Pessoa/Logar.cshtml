@using System.Configuration
@{
    Layout = "~/Views/Shared/_LayoutOff.cshtml";
}
@section scripts
{
    <script type="text/javascript">
        $(function () {
            $('.showSenha').on("click", function () {
                if ($(this).attr("data-tipo") == "show") {
                    $(this).parent().find("input").prop("type", "text");
                    $(this).attr("data-tipo", "hide");
                    $(this).removeClass("mdi-eye-off").addClass("mdi-eye");
                } else {
                    $(this).parent().find("input").prop("type", "password");
                    $(this).attr("data-tipo", "show");
                    $(this).removeClass("mdi-eye").addClass("mdi-eye-off");
                }
            });
            $('#to-recover').on("click", function () {
                $("#loginform").slideUp();
                $("#recoverform").fadeIn();
            });
            $('#to-login').on("click", function () {
                showLogin();
            });
        });
    </script>
}
<div class="login-register" style="background-color: #5c5b57;">
    <div class="login-box card">
        <div class="card-body radius">
            <form asp-action="Validar" method="post" enctype="multipart/form-data" role="form" class="floating-labels formAsync" id="loginform" novalidate="">
                <div style="display: flex; justify-content: center; margin: 15px 0;">
                <img src="~/images/logo.png" style="width: 157px;"/>
                </div>
                <h3 class="box-title m-b-20">Entrar</h3>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="email" name="email" id="email" class="form-control" />
                        <span class="bar"></span>
                        <label for="email">E-mail de acesso*</label>
                        <p class="help-block"></p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <i class="mdi mdi-eye-off showSenha" data-tipo="show" style="right: 0;font-size: 15pt;margin-top: 8px;position: absolute;margin-right: 12px;cursor: pointer"></i>
                        <input type="password" name="senha" id="senha" class="form-control" />
                        <span class="bar"></span>
                        <label for="senha">Senha de acesso*</label>
                        <p class="help-block"></p>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12">
                        <div class="checkbox checkbox-info float-left p-t-0">
                            <input id="RememberMe" name="RememberMe" type="checkbox" class="filled-in chk-col-light-blue">
                            <label for="RememberMe"> Salvar informação? </label>
                        </div> <a href="javascript:void(0)" id="to-recover" class="text-muted float-right"><i class="fa fa-lock m-r-5"></i> Recuperar senha</a>
                    </div>
                </div>
                <div class="form-group text-center">
                    <div class="col-xs-12 p-b-20">
                        <button class="btn btn-block btn-lg btn-info btn-rounded" type="submit">Logar</button>
                    </div>
                </div>
