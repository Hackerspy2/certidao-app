                            <a href="javascript:void(0)" class="btn btn-googleplus" data-toggle="tooltip" title="Login with Google"> <i aria-hidden="true" class="fab fa-google-plus-g"></i> </a>
                        </div>
                    </div>
                </div>
                    <div class="form-group m-b-0">
                        <div class="col-sm-12 text-center">
                            Não tem uma conta? <a href="@Url.Action()" class="text-info m-l-5"><b>Cadastre-se</b></a>
                        </div>
                    </div>*@
                <input type="hidden" name="returnUrl" id="returnUrl" value="@ViewBag.returnUrl"/>
            </form>
            <form asp-action="RecuperarSenha" method="post" enctype="multipart/form-data" role="form" class="floating-labels formAsync" id="recoverform" novalidate="">
                    <h3 class="box-title m-b-20">Recuperar senha</h3>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <p class="text-muted">Digite seu endereço de e-mail e sua senha será enviada para seu e-mail. </p>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input type="email" class="form-control" name="emailReq" id="emailReq" />
                            <span class="bar"></span>
                            <label for="emailReq">E-mail de acesso*</label>
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Recuperar</button>
                        </div>
                        <div class="col-xs-12">
                            <br />
                            <a href="javascript:void(0)" id="to-login" class="text-muted"> Voltar</a>
                        </div>
                    </div>
              </form>
        </div>
    </div>
